<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet author="marcus.vinicius" id="20220119-1">
        <createTable tableName="pessoa" schemaName="${schema.name}">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="nome" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="cpf" type="VARCHAR(11)">
                <constraints nullable="false"/>
            </column>
            <column name="data_nascimento" type="date"/>
            <column name="data_insercao" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="data_atualizacao" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="ativo" type="boolean"/>
        </createTable>
        <rollback>
            <dropTable tableName="pessoa"/>
        </rollback>
    </changeSet>
    <changeSet author="marcus.vinicius" id="20220119-2">
        <addUniqueConstraint tableName="pessoa" schemaName="${schema.name}" columnNames="cpf"/>
    </changeSet>
</databaseChangeLog>

